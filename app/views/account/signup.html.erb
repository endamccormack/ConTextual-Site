<script type="text/javascript" src="js/parsley.js"></script>

<div class="section_light ">
 
  <form id="signUpForm" method="post" accept-charset="UTF-8" action="/attempt_signup" data-parsley-validate>
  
    <div class="row " style="margin-top:20px; margin-bottom:20px;">
      <p class="ConTextualTagLineDark" style="width:100%; text-align:center;">Sign up</p>
    </div>

    <!-- FORM STARTS HERE -->

      <p class="validateTips"></p>

      <div class="row">
        <div class="large-6 push-3 columns">
          <label>Company Name <small>required</small>
            <input type="text" placeholder="Salamandar Corp" data-parsley-minlength="2" name="CompanyName" required/>
          </label>

        </div>
      </div>



      <div class="row">
        <div class="large-6 push-3  columns">
          <label>First Name <small>required</small>
            <input type="text" id="FirstName" placeholder="John" name="FirstName" data-parsley-minlength="2" required/>
          </label>
        </div>
        <div class="large-3 columns"></div>
      </div>



      <div class="row">
        <div class="large-6 push-3  columns" class="name-field">
          <label>Last Name <small>required</small>
            <input type="text" placeholder="Smith" id="LastName" name="LastName" data-parsley-minlength="3" required/>
          </label>

        </div>
        
      </div>


      <div class="row">
        <div class="large-6 push-3  columns">
          <label>Email Address <small>required</small>
            <input type="email" placeholder="John@gmail.com" data-parsley-type="email" id="EmailAddress" name="EmailAddress" required/>
          </label>
        </div>
      </div>
        
      <div class="row">
        <div class="large-6 push-3  columns">
          <label>Job Title
            <input type="text" placeholder="Helicopter" name="JobTitle" />
          </label>
        </div>
      </div>

      <div class="row">
        <div class="large-6 push-3  columns" class="password-field">
          <label>Password <small>required</small>
            <input type="password" id="password" name="password" placeholder="Password" required/>
          </label>
        </div>
      </div>

      <div class="row">
        <div class="large-6 push-3  columns" class="password-confirmation-field">
          <label>Confirm Password <small>required</small>
            <input placeholder="Password" type="password" data-parsley-equalto="#password" required/>
          </label>
        </div>
      </div>

      <div class="row">
        <div class="large-4 push-4  columns">
          <input type="submit" class="button expand" />
        </div>
      </div>
    

    
    <!-- FORM ENDS HERE -->
  
  </form>
